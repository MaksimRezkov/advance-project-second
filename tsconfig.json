{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
          "*": ["./src/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./config/jest/jest-setup.ts",
        "./config/jest/jestSvgEmptyComponent.tsx",
        "./config/storybook/**/*.ts",
        "./config/build/**/*.ts",
        "./config/common/**/*.ts",
        "./webpack.config.ts",
    ],
}
